<script>
    	$(window).load(function() {
		// Animate loader off screen
        setTimeout(() => {
          $(".loading-image").fadeOut("slow");
          $(".loading-txt").fadeOut("slow");
        }, 2000)
        
		setTimeout(() => {
      $(".se-pre-con").fadeOut("slow");
      $(".on-loading").removeClass("on-loading")
    }, 3000)
	});
</script>
<style>
.se-pre-con {
  overflow-z: hidden !important;
	position: fixed;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100vh;
	z-index: 9999;
  background-color: #ffd700;
  text-align: center;
}
  
  .loading-image {
    margin-top: 50%;
    border-radius: 50%;
    box-shadow: 1px 3px 10px black;
  }
  
  @media (min-width: 992px) {
  .loading-image {
    margin-top: 21%;
    border-radius: 50%;
    box-shadow: 1px 3px 10px black;
  }    
  }
</style>
<div class="se-pre-con">
  <img class="loading-image animate-img" src="<%= bot.user.displayAvatarURL() %>">
  <h1 class="loading-txt">
    Loading...
  </h1>
</div>  